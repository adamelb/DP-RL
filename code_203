import pandas as pd
import numpy as np

# Example: assuming your arrays are named like this
a1 = np.random.rand(7580)
a2 = np.random.rand(7580)
a3 = np.random.rand(7580)
a4 = np.random.rand(7580, 3)  # This is the 2D array

# Combine all into a DataFrame
df = pd.DataFrame({
    'var1': a1,
    'var2': a2,
    'var3': a3,
    'var4': a4[:, 0],
    'var5': a4[:, 1],
    'var6': a4[:, 2],
})

# Compute covariance matrix
cov_matrix = df.cov()
print(cov_matrix)